---
interface Props {
  name: string;
  longAlias: string;
  image: string;
  weight: number;
  headSize: number;
  height: number;
  stillGrowing: boolean;
  url: string;
}

const { name, longAlias, image, weight, headSize, height, stillGrowing, url } = Astro.props;
---
<div class="bg-white rounded-lg shadow-lg overflow-hidden">
  <img src={image} alt={name} class="w-full h-64 object-cover" />
  <div class="p-6">
    <h3 class="text-2xl font-bold mb-2">{name}</h3>
    <p class="text-gray-600 mb-4">{longAlias}</p>
    <div class="grid grid-cols-2 gap-2 mb-4">
      <div class="flex items-center">
        <span class="font-semibold mr-2">Weight:</span> {weight} lbs
      </div>
      <div class="flex items-center">
        <span class="font-semibold mr-2">Head Size:</span> {headSize}"
      </div>
      <div class="flex items-center">
        <span class="font-semibold mr-2">Height:</span> {height}"
      </div>
      <div class="flex items-center">
        <span class="font-semibold mr-2">Growing:</span> 
        {stillGrowing ? 'Yes' : 'No'}
      </div>
    </div>
    <a href={url} class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
      View Details
    </a>
  </div>
</div> 