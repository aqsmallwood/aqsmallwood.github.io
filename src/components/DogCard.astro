---
interface Props {
  name: string;
  longAlias: string;
  image: string;
  weight: number;
  headSize: number;
  height: number;
  stillGrowing: boolean;
  url: string;
  body: string;
}

const { name, longAlias, image, weight, headSize, height, stillGrowing, url, body } = Astro.props;
const { Content } = await body.render();
---
<div class="bg-stone-950 overflow-hidden rounded-lg p-8">
  <div>
    <h3 class="text-3xl text-center font-bold mb-4 font-wild text-amber-500">{longAlias}</h3>
    <img src={image} alt={name} class="w-full object-cover" />
    <div class="grid grid-cols-1 gap-2 my-4 place-items-center text-2xl font-light">
    {weight !== -1 && (
      <div class="flex items-center">
        <span class="mr-2">WEIGHT:</span> {weight} lbs
      </div>
    )}
    {headSize !== -1 && (
      <div class="flex items-center">
        <span class="mr-2">HEAD:</span> {headSize}"
      </div>
    )}
    {height !== -1 && (
      <div class="flex items-center">
        <span class="mr-2">HEIGHT:</span> {height}"
      </div>
    )}
      {stillGrowing && (
        <div class="flex items-center">
          <span class="mr-2">Still Growing</span>
        </div>
      )}
    </div>
    <p class="text-center text-2xl font-light">
      <Content />
    </p>
  </div>
</div> 